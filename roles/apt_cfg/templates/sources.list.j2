deb https://archive.ubuntu.com/ubuntu {{ ansible_distribution_release }} main restricted\n
deb https://archive.ubuntu.com/ubuntu {{ ansible_distribution_release }}-updates main restricted\n
deb https://archive.ubuntu.com/ubuntu {{ ansible_distribution_release }} universe\n
deb https://archive.ubuntu.com/ubuntu {{ ansible_distribution_release }}-updates universe\n
deb https://archive.ubuntu.com/ubuntu {{ ansible_distribution_release }} multiverse\n
deb https://archive.ubuntu.com/ubuntu {{ ansible_distribution_release }}-updates multiverse\n
deb https://archive.ubuntu.com/ubuntu {{ ansible_distribution_release }}-backports main restricted universe multiverse\n
deb https://security.ubuntu.com/ubuntu {{ ansible_distribution_release }}-security main restricted\n
deb https://security.ubuntu.com/ubuntu {{ ansible_distribution_release }}-security universe\n
deb https://security.ubuntu.com/ubuntu {{ ansible_distribution_release }}-security multiverse\n
